#!/bin/sh

# This test to make sure the csv2 variable max_ar_chain works

for LEVEL in 1 2 3 6 9 ; do

echo max_chain is $LEVEL

killall maradns > /dev/null 2>&1 # Don't run this test on Solaris
cat > mararc << EOF
chroot_dir="$( pwd )"
ipv4_bind_addresses="127.0.0.1"
csv2 = {}
csv2["example.com."] = "db.example.com"
max_chain=${LEVEL}
EOF

cat > db.example.com << EOF
www.% A 10.1.2.1
www.% A 10.1.2.2
www.% A 10.1.2.3
www.% A 10.1.2.4
www.% A 10.1.2.5
www.% A 10.1.2.6
www.% A 10.1.2.7
www.% A 10.1.2.8
www.% A 10.1.2.9
EOF

# OK, test the server
../../../server/maradns -f mararc > /dev/null 2>&1 &
sleep 1
../../../tools/askmara Awww.example.com.
echo
../../../tools/askmara Awww.example.com.
echo
sleep 1
killall maradns > /dev/null 2>&1

done

rm mararc
rm db.example.com
